{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": ["dependencies"],
  "separateMajorMinor": true,
  "postUpdateOptions": ["gomodTidy"],
  "constraints": {
    "go": "1.22.0"
  },
  "packageRules": [
    {
      "matchManagers": ["gomod"],
      "matchDepTypes": ["indirect"],
      "enabled": true
    },
    {
      "matchFilesNames": ["internal/tools/**"],
      "constraints": {
        "go": "1.22.10"
      },
      "enabled": true
    }
  ]
}